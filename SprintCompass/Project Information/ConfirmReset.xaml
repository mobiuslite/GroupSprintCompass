<Window x:Class="SprintCompass.ConfirmReset"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SprintCompass"
      mc:Ignorable="d"
      Title="WARNING" Height="283.485" Width="311.03">

    <Grid>
        <Label x:Name="label" Content="WARNING" HorizontalAlignment="Center" Margin="90,10,90,0" VerticalAlignment="Top" Width="123" FontSize="22" Background="{x:Null}" Foreground="Red" FontWeight="Bold" Height="43" Grid.ColumnSpan="2" BorderBrush="#FF1F1F1F"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="10,218,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
        <Button x:Name="btnConfirm" Content="Confirm" HorizontalAlignment="Left" Margin="218,218,0,0" VerticalAlignment="Top" Width="75" Background="#FFDDDDDD" BorderBrush="Black" Foreground="#FF08B400" Click="confirm_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="93" Margin="10,70,0,0" TextWrapping="Wrap" Text="All data related to the project will be deleted.&#xD;&#xA;Are you sure you want to reset?" VerticalAlignment="Top" Width="283" TextAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="18" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
